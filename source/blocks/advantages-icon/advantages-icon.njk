

{% macro value(args) %}
  <div class="advantages-icon">
      <h3 class="advantages-icon__title">
        <svg
          class="advantages-icon__icon advantages-icon__icon--{{ args.icon }}"
          width="{{ args.width }}"
          height="{{ args.height }}">
          <use xlink:href="img/sprite.svg#{{ args.icon }}"></use>
        </svg>
        {{ args.title }}
      </h3>
      <p class="advantages-icon__text">
        {{ args.text }}
      </p>
  </div>
{% endmacro %}